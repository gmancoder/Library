@model IEnumerable<BookLibrary.Models.ApplicationUser>

@{
    ViewBag.Title = "All Users";
    ViewBag.PageImage = "/Content/Images/users.png";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table" id="user_table">
    <thead>
        <tr>
            <th>ID</th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    <a href="/Users/@item.Id/Edit">@Html.DisplayFor(modelItem => item.Email)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Update Roles", "UpdateRoles", new { id = item.Id }, new { @class = "btn btn-xs btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-danger", onClick = "return confirm('Are you sure');" })
                    
                </td>
            </tr>
        }
    </tbody>
</table>
