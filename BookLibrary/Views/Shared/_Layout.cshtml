@using BookLibrary.Models.ViewModels
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The GManCoder Library - @ViewBag.Title</title>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/base/jquery-ui.css" type="text/css" media="all" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker.css" rel="Stylesheet" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/js/bootstrap-switch.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.2/css/bootstrap3/bootstrap-switch.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>
    <link href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <link href="~/Content/summernote.css" rel="stylesheet">
    <script src="~/Scripts/summernote.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.colorbox.js"></script>
    <link rel="stylesheet" href="~/Content/colorbox.css" />
    <link href="~/Content/Site.css" rel="stylesheet">
    <script src="~/Scripts/Site.js"></script>

</head>
<body>
    <div id="app">
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle"     >
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("The GManCoder Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                Books <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Authors", "Index", "Authors")</li>
                                <li>@Html.ActionLink("Books", "Index", "Books")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                Magazines <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Magazines", "Index", "Magazines")</li>
                                <li>@Html.ActionLink("Issues By Date", "Issues", "Magazines")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                Audio <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Artists", "Index", "Artists")</li>
                                <li>@Html.ActionLink("Albums", "Index", "Albums")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                Video <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
                                <li>@Html.ActionLink("Movie Stars", "Index", "MovieStars")</li>
                                <li>@Html.ActionLink("TV Shows", "Index", "TVShows")</li>
                                <li>@Html.ActionLink("TV Stars", "Index", "TVStars")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Browse by Category", "Index", "Categories")</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                    Admin <span class="caret"></span>
                                </a>

                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Add Author", "Create", "Authors")</li>
                                    <li>@Html.ActionLink("Add Book", "Create", "Books")</li>
                                    <li>@Html.ActionLink("Add Magazine", "Create", "Magazines")</li>
                                    <li>@Html.ActionLink("Add Artist", "Create", "Artists")</li>
                                    <li>@Html.ActionLink("Add Album", "Create", "Albums")</li>
                                    <li>@Html.ActionLink("Add Movie", "Create", "Movies")</li>
                                    <li>@Html.ActionLink("Add TV Show", "Create", "TVShows")</li>
                                    <li>@Html.ActionLink("User Management", "Index", "Users")</li>
                                </ul>
                            </li>
                        }

                    </ul>
                    @Html.Partial("_LoginPartial")
                    <form class="navbar-form navbar-right" method="GET" action="/Home/Search" role="search" id="navbar-search">
                        <div class="form-group">
                            <input type="text" class="form-control" name="q" placeholder="Search">
                        </div>
                        <a href="javascript:;" id="search_link" onclick="$(this).parent().submit();">
                            <img src="~/Content/Images/search.png" width="24" alt="Search" title="Search" />
                        </a>
                    </form>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row" id="header-content">
                <div class="col-md-12">
                    <div class="media">
                        <div class="media-left media-top">
                            @if (ViewBag.PageImage != null)
                            {
                                <a href="@ViewBag.PageImage" class="colorbox_img" rel="colorbox" title="@ViewBag.Title">

                                    <img class="media-object" src="@ViewBag.PageImage" alt="@ViewBag.Title" width="150" />
                                </a>
                            }
                            else
                            {
                                <a href="#">
                                    <img class="media-object" src="~/Content/Images/q block.png" alt="@ViewBag.Title" />
                                </a>
                            }

                        </div>
                        <div class="media-body">
                            <h2 class="media-heading">@ViewBag.Title</h2>
                            @if (ViewBag.SubTitle != null)
                            {
                                <h5>@Html.Raw(ViewBag.SubTitle)</h5>
                            }
                            @if (ViewBag.Details != null)
                            {
                                <p>@Html.Raw(ViewBag.Details.Replace("&lt;", "<").Replace("&gt;", ">"))</p>
                            }
                            @if (ViewBag.LinkList != null && ViewBag.LinkList is List<PageLink>)
                            {
                                int idx = 0;
                                foreach (PageLink link in ViewBag.LinkList as List<PageLink>)
                                {
                                    if (idx > 0)
                                    {
                                        @:&nbsp;|&nbsp;
                                    }
                                    <a href="@link.Url" target="@link.Target" @Html.Raw(link.AdditionalArgs)>@link.Text</a>
                                    idx += 1;
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div id="body_container">
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Hometown Computer Services</p>
            </footer>
        </div>
    </div>
    <div class="modal fade" id="celebrityModal" tabindex="-1" role="dialog" aria-labelledby="celebrityModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="max-height:90%;overflow:auto;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="celebrityModalLabel">Select Celebrity</h4>
                </div>
                <div class="modal-body">
                    <div id="celebrity_modal_loading" style="display:none;">
                        <img src="~/Content/Images/ajax-loader.gif" alt="Loading" />
                    </div>
                    <div id="celebrity_modal_content">
                        <div class="row">
                            <div class="col-md-12">
                                <strong>Get Celebrities Starting With:</strong>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <a href="javascript:;" onclick="GetCelebrities('A');">A</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('B');">B</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('C');">C</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('D');">D</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('E');">E</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('F');">F</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('G');">G</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('H');">H</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('I');">I</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('J');">J</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('K');">K</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('L');">L</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('M');">M</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('N');">N</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('O');">O</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('P');">P</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('Q');">Q</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('R');">R</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('S');">S</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('T');">T</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('U');">U</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('V');">V</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('W');">W</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('X');">X</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('Y');">Y</a>&nbsp;
                                <a href="javascript:;" onclick="GetCelebrities('Z');">Z</a>&nbsp;
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" id="celebrities">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="magazine_issueModal" tabindex="-1" role="dialog" aria-labelledby="magazine_issueModalLabel">
        <div class="modal-dialog" role="document">
            <div id="magazine_issue_modal_loading" style="text-align:center;display:none;">
                <img src="/images/ajax-loader.gif" alt="Loading" /><br />
                <span id="magazine_issue_modal_loading_action"></span>
            </div>
            <div class="modal-content" id="magazine_issue_modal_content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="magazine_issueModalLabel">Update Issue</h4>
                </div>
                <div class="modal-body">
                    <form name="magazine_issue_form" id="magazine_issue_form" class="form form-horizontal">
                        <input type="hidden" name="magazine_issue_id" id="magazine_issue_id" value="" />
                        <input type="hidden" name="magazine_id" id="magazine_id" value="" />
                        <div class="form-group">
                            <label class="control-label col-lg-2" for="release_date">Release Date: </label>
                            <div class="col-lg-10">
                                <input type="text" class="datepicker form-control" id="release_date" name="release_date" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-2" for="release_date">Release Date Text: </label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" id="release_date_text" name="release_date_text" />
                            </div>
                        </div>
                        <span class="modal-fine-print" id="pdf_title"></span>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" onClick="SaveMagazineIssue();" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
    @RenderSection("Scripts", false)
</body>
</html>
